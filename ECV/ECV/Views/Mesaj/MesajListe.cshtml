
@{
    ViewBag.Title = "MesajListe";
    Layout = "~/Views/Shared/_AdminMaster.cshtml";
}

@model IEnumerable<ECV.Models.GelenMesaj>
@section Baslik{ GELEN MESAJ }
@section sitemap{GELEN MESAJ }
@section title{GELEN MESAJ}
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">BLOG Listeleniyor</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Ad Soyad</th>
                        <th>Konu</th>
                        <th>Mail</th>
                        <th>Telefon</th>
                        <th>Mesaj</th>
                        <th>Tarih</th>
                        <th>İşlem</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>@item.MID</td>
                            <td>@item.adSoyad</td>
                            <td>@item.konu</td>
                            <td>@item.mail</td>
                            <td>@item.tel</td>
                            <td>@item.mesaj</td>
                            <td>@item.tarih</td>

                            <td>
                                <div class="btn-group">
                                    <a href="/Mesaj/MesajSil?MID=@item.MID" class="btn btn-danger">Sil</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Ad Soyad</th>
                        <th>Konu</th>
                        <th>Mail</th>
                        <th>Telefon</th>
                        <th>Mesaj</th>
                        <th>Tarih</th>
                        <th>İşlem</th>
                    </tr>
                </tfoot>
            </table>
        </div>
        <!-- /.card-body -->
    </div>


</div>

