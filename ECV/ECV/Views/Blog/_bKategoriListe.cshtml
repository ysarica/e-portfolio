@model IEnumerable<ECV.Models.blogKategori>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">BLOG KATEGORİ Listeleniyor</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Kategori Adı</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>@item.BKID</td>
                            <td>@item.kategoriAdi</td>
                            

                            <td>
                                <div class="btn-group">
                                    <a href="/Blog/bKategoriSil?BKID=@item.BKID" class="btn btn-danger">Sil</a>
                                    <a href="/Blog/bKategoriDuzenle?BKID=@item.BKID" class="btn btn-warning">Düzenle</a>
                                </div>
                            </td>



                        </tr>

                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Kategori Adı</th>
                        <th>İşlem</th>
                    </tr>
                </tfoot>
            </table>
        </div>
        <!-- /.card-body -->
    </div>


</div>
