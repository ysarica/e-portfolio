@model IEnumerable<ECV.Models.blog>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">BLOG Listeleniyor</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Kategori Adı</th>
                        <th>Başlık</th>
                        <th>Tarih</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>@item.BID</td>
                            <td>@item.kategoriAd</td>
                            <td>@item.baslik</td>
                            <td>@item.tarih</td>
                            <td>
                                <div class="btn-group">
                                    <a href="/Blog/BlogSil?BID=@item.BID" class="btn btn-danger">Sil</a>
                                    <a href="/Blog/BlogDuzenle?BID=@item.BID" class="btn btn-warning">Düzenle</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Kategori Adı</th>
                        <th>Başlık</th>
                        <th>Tarih</th>
                        <th>İşlem</th>
                    </tr>
                </tfoot>
            </table>
        </div>
        <!-- /.card-body -->
    </div>


</div>
