
@{
    ViewBag.Title = "bKategoriDuzenle";
    Layout = "~/Views/Shared/_AdminMaster.cshtml";
}


@section Baslik{ BLOG KATEGORİ DÜZENLE }
@section sitemap{BLOG KATEGORİ DÜZENLE }
@section title{BLOG KATEGORİ DÜZENLE}
@model ECV.Models.blogKategori

<div class="col-md-12">
    <div class="card card-warning">
        <div class="card-header">
            <h3 class="card-title">BLOG KATEGORİ DÜZENLE</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
            <!-- /.card-tools -->
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            @using (Html.BeginForm("bKategoriDuzenle", "Blog", FormMethod.Post, new { @class = "form-horizontal", @id = "form_sample_1", @enctype = "multipart/form-data" }))
            { @Html.HiddenFor(m => m.BKID)
                @Html.AntiForgeryToken()

                <div class="card-body">
                    <div class="form-group">
                        <label for="exampleInputPassword1">Yetenek Adı</label>
                        <input type="text" class="form-control" id="kategoriAdi" name="kategoriAdi" value="@Model.kategoriAdi">
                    </div>
                   

                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                </div>
            }
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>
