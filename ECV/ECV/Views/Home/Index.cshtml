<section id='resume' class='resume-section section'>

    <div class='container'>
        <div class='row'>
            <div class='col-md-6 col-md-offset-3'>
                <div class='section-header text-center'>

                    <h2 class='animate text-over-block'>Özgeçmiş (CV)</h2>

                    <!--divider-->
                    <div class='divider-draft center'></div>
                    <!--/divider-->


                </div>
            </div>
        </div>
    </div>

    <div class='timeline-block section-block'>
        <div class='container'>
            <ul class='timeline'>

                <li class='timeline-header'>
                    <h4>Eğitim</h4>
                </li>
                @{  int c = 0;
                    foreach (var b in ViewBag.egitim)
                    {
                        c++;
                        if (c % 2 == 0)
                        {
                            <li>

                                <div class='timeline-desc'>

                                    <h4>@b.yil</h4>

                                </div>

                                <div class='timeline-content'>

                                    <h4>@b.egitimTürü</h4>
                                    <span>@b.okul</span>

                                    <p>
                                        @b.bölüm
                                    </p>

                                </div>

                            </li>
                        }
                        else
                        {
                            <li class='inverse'>

                                <div class='timeline-desc'>

                                    <h4>@b.yil</h4>

                                </div>

                                <div class='timeline-content'>

                                    <h4>@b.egitimTürü</h4>
                                    <span>@b.okul</span>

                                    <p>
                                        @b.bölüm
                                    </p>

                                </div>

                            </li>
                        }
                    }

                }




                <li class='timeline-header'>
                    <h4>Deneyim</h4>
                </li>
                @{ int k = 0;
                    foreach (var z in ViewBag.deneyim)
                    {
                        k++;
                        if (k % 2 == 0)
                        {
                            <li>

                                <div class='timeline-desc'>

                                    <h4>@z.yil</h4>

                                </div>

                                <div class='timeline-content'>

                                    <h4>@z.unvan</h4>
                                    <span>@z.firmaAdi</span>

                                    <p>
                                        @z.tecrübe
                                    </p>

                                </div>

                            </li>
                        }
                        else
                        {
                            <li class='inverse'>

                                <div class='timeline-desc'>

                                    <h4>@z.yil</h4>

                                </div>

                                <div class='timeline-content'>

                                    <h4>@z.unvan</h4>
                                    <span>@z.firmaAdi</span>

                                    <p>
                                        @z.tecrübe
                                    </p>

                                </div>

                            </li>
                        }
                    }
                }








            </ul>
        </div>
    </div>

    <div class='hobbies-block bg-lightgray section-block'>
        <div class='container'>

            <div class='section-header text-center'>
                <h2 class='animate text-over-block'>Hobilerim</h2>
                <!--divider-->
                <div class='divider-draft center'></div>
                <!--/divider-->
            </div>

            <div class='row'>

                @foreach (var a in ViewBag.hobi)
                {
                    <div class='col-md-2 col-sm-4 col-xs-6'>

                        <div class='hobby'>

                            <div class='icon'>
                                <i class='@a.icon'></i>
                            </div>

                            <h4>@a.hobi</h4>

                        </div>

                    </div>
                }

            </div>



        </div>
    </div>

    <div class='skills-block section-block'>

        <div class='container'>

            <div class='section-header text-center'>
                <h2 class='animate text-over-block'>Beceriler</h2>

                <!--divider-->
                <div class='divider-draft center'></div>
                <!--/divider-->

            </div>


            <div class='row'>



                @foreach (var m in ViewBag.beceri)
                {
                    <div class='col-md-6'>
                        <div class='skill'>

                            <h4>@m.adi</h4>

                            <div class='skill-bar' data-percent='@m.yüzde'>
                                <div class='bar'>
                                    <div class='percent'>@m.yüzde%</div>
                                </div>
                            </div>

                        </div>
                    </div>
                }






            </div>

        </div>

    </div>

    @*-----FOOTER BAŞLANGIÇ-----*@
    <div class='footer bg-lightgray section-block'>

        <div class='container'>

            <div class='row'>

                <div class='col-xs-6 text-left'>
                    <h4>@ViewBag.ad</h4>
                </div>

                <div class='col-xs-6 text-right'>
                    <ul class='footer-social'>
                        @foreach (var d in ViewBag.sosyal)
                        {
                            <li>
                                <a href='@d.link'>
                                    <i class='ion-social-@d.icon'></i>
                                </a>
                            </li>
                        }

                    </ul>
                </div>

            </div>


        </div>

    </div>
    @*-----FOOTER BİTİŞ-----*@


</section>
