
@{
    ViewBag.Title = "HobiEkle";
    Layout = "~/Views/Shared/_AdminMaster.cshtml";
}

@section Baslik{ HOBİ EKLE }
@section sitemap{HOBİ EKLE }
@section title{HOBİ EKLE}
@model ECV.Models.Deneyim

@Html.Action("_HobiListe", "CV")


<div class="col-md-12">
    <div class="card card-success">
        <div class="card-header">
            <h3 class="card-title">HOBİ EKLE</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
            <!-- /.card-tools -->
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            @using (Html.BeginForm("HobiEkle", "CV", FormMethod.Post, new { @class = "form-horizontal", @id = "form_sample_1", @enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="card-body">
                    <div class="form-group">
                        <label for="exampleInputPassword1">Hobi Adı</label>
                        <input type="text" class="form-control" id="hobi" name="hobi" value="" placeholder="Ör:Trekking">
                    </div>
                    <div class="form-group">
                        <a href="https://ionicons.com/v2/cheatsheet.html" target="_blank" class="btn btn-info">İcon Sekmesi</a>
                        <br />
                        <label for="exampleInputEmail1">İcon</label>
                        <input type="text" class="form-control" id="icon" name="icon" value="" placeholder="İcon Sekmesine Bakınız">
                    </div>
                   
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Ekle</button>
                </div>
            }
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>


