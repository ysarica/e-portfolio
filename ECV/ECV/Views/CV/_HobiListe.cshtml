@model IEnumerable<ECV.Models.Hobiler>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">HOBİ Listeleniyor</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Hobi</th>
                        <th>İcon</th>   
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>@item.HID</td>
                            <td>@item.hobi</td>
                            <td>@item.icon</td> 
                            <td>
                                <div class="btn-group">
                                    <a href="/CV/HobiSil?HID=@item.HID" class="btn btn-danger">Sil</a>
                                    <a href="/CV/HobiDuzenle?HID=@item.HID" class="btn btn-warning">Düzenle</a>
                                </div>
                            </td>



                        </tr>

                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Hobi</th>
                        <th>İcon</th>
                        <th>İşlem</th>
                    </tr>
                </tfoot>
            </table>
        </div>
        <!-- /.card-body -->
    </div>


</div>

