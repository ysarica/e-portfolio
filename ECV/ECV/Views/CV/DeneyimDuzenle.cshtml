
@{
    ViewBag.Title = "DeneyimDuzenle";
    Layout = "~/Views/Shared/_AdminMaster.cshtml";
}

@section Baslik{ DENEYİM DÜZENLE }
@section sitemap{DENEYİM DÜZENLE }
@section title{DENEYİM DÜZENLE}
@model ECV.Models.Deneyim

<div class="col-md-12">
    <div class="card card-warning">
        <div class="card-header">
            <h3 class="card-title">DENEYİM DÜZENLE</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
            <!-- /.card-tools -->
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            @using (Html.BeginForm("DeneyimDuzenle", "CV", FormMethod.Post, new { @class = "form-horizontal", @id = "form_sample_1", @enctype = "multipart/form-data" }))
            { @Html.HiddenFor(m => m.DID)
                @Html.AntiForgeryToken()

                <div class="card-body">
                    <div class="form-group">
                        <label for="exampleInputPassword1">Firma Adı</label>
                        <input type="text" class="form-control" id="firmaAdi" name="firmaAdi" value="@Model.firmaAdi" >
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Ünvan</label>
                        <input type="text" class="form-control" id="unvan" name="unvan" value="@Model.unvan" >
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Çalışma Yıl</label>
                        <input type="text" class="form-control" id="yil" name="yil" value="@Model.yil" >
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Tecrübe/Kazanım</label>
                        <input type="text" class="form-control" id="tecrübe" name="tecrübe" value="@Model.tecrübe" >
                    </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                </div>
            }
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>


