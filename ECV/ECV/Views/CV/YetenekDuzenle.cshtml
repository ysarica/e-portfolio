
@{
    ViewBag.Title = "YetenekDuzenle";
    Layout = "~/Views/Shared/_AdminMaster.cshtml";
}


@section Baslik{ YETENEK DÜZENLE }
@section sitemap{YETENEK DÜZENLE }
@section title{YETENEK DÜZENLE}
@model ECV.Models.Yetenekler

<div class="col-md-12">
    <div class="card card-warning">
        <div class="card-header">
            <h3 class="card-title">YETENEK DÜZENLE</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
            <!-- /.card-tools -->
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            @using (Html.BeginForm("YetenekDuzenle", "CV", FormMethod.Post, new { @class = "form-horizontal", @id = "form_sample_1", @enctype = "multipart/form-data" }))
            { @Html.HiddenFor(m => m.YID)
                @Html.AntiForgeryToken()

                <div class="card-body">
                    <div class="form-group">
                        <label for="exampleInputPassword1">Yetenek Adı</label>
                        <input type="text" class="form-control" id="adi" name="adi" value="@Model.adi">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Yüzde</label>
                        <input type="text" class="form-control" id="yüzde" name="yüzde" value="@Model.yüzde">
                    </div>
                   
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                </div>
            }
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>

