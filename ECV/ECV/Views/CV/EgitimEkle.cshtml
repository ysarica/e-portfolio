
@{
    ViewBag.Title = "EgitimEkle";
    Layout = "~/Views/Shared/_AdminMaster.cshtml";
}

@section Baslik{ EĞİTİM EKLE }
@section sitemap{EĞİTİM EKLE }
@section title{EĞİTİM EKLE}
@model ECV.Models.EgitimBilgi

@Html.Action("_EgitimListe", "CV")


<div class="col-md-12">
    <div class="card card-success">
        <div class="card-header">
            <h3 class="card-title">EĞİTİM EKLE</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
            <!-- /.card-tools -->
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            @using (Html.BeginForm("EgitimEkle", "CV", FormMethod.Post, new { @class = "form-horizontal", @id = "form_sample_1", @enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="card-body">
                    <div class="form-group">
                        <label for="exampleInputPassword1">Eğitim Türü</label>
                        <input type="text" class="form-control" id="egitimTürü" name="egitimTürü" value="" placeholder="Ör:Üniversite">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Bölüm</label>
                        <input type="text" class="form-control" id="bölüm" name="bölüm" value="" placeholder="Ör:Bilgisayar Mühendisliği">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Okul</label>
                        <input type="text" class="form-control" id="okul" name="okul" value="" placeholder="Ör:Düzce Üniversitesi">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Yıl</label>
                        <input type="text" class="form-control" id="yil" name="yil" value="" placeholder="Ör:2019-2024">
                    </div>
                </div>
                <!-- /.card-body -->

                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Ekle</button>
                    </div>
            }
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>


