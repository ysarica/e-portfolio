
@{
    ViewBag.Title = "YorumEkle";
    Layout = "~/Views/Shared/_AdminMaster.cshtml";
}
@section Baslik{ YORUM EKLE }
@section sitemap{YORUM EKLE }
@section title{YORUM EKLE}

@model ECV.Models.Yorum

@Html.Action("_YorumListele", "Diger")


<div class="col-md-12">
    <div class="card card-success">
        <div class="card-header">
            <h3 class="card-title">PORTFOY KATEGORİ EKLE</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
            <!-- /.card-tools -->
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            @using (Html.BeginForm("YorumEkle", "Diger", FormMethod.Post, new { @class = "form-horizontal", @id = "form_sample_1", @enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="card-body">
                    <div class="form-group">
                        <label for="exampleInputPassword1">Ad Soyad</label>
                        <input type="text" class="form-control" id="adSoyad" name="adSoyad" value="" placeholder="Ör:Ferhat Biçer">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Unvan</label>
                        <input type="text" class="form-control" id="unvan" name="unvan" value="" placeholder="Ör:Yönetici">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Yorum</label>
                        <input type="text" class="form-control" id="yorum1" name="yorum1" value="" placeholder="Ör:Gerçekten Hızlı Ve Başarılı Bir Tasarım">
                    </div>

                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Ekle</button>
                </div>
            }
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>


