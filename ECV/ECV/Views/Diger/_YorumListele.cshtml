@model IEnumerable<ECV.Models.Yorum>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">YORUM Listeleniyor</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Ad Soyad</th>
                        <th>Ünvan</th>
                        <th>Yorum</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>@item.YID</td>
                            <td>@item.adSoyad</td>
                            <td>@item.unvan</td>
                            <td>@item.yorum1</td>
                            <td>
                                <div class="btn-group">
                                    <a href="/Diger/YorumSil?YID=@item.YID" class="btn btn-danger">Sil</a>
                                    <a href="/Diger/YorumDuzenle?YID=@item.YID" class="btn btn-warning">Düzenle</a>
                                </div>
                            </td>



                        </tr>

                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Ad Soyad</th>
                        <th>Ünvan</th>
                        <th>Yorum</th>
                        <th>İşlem</th>
                    </tr>
                </tfoot>
            </table>
        </div>
        <!-- /.card-body -->
    </div>


</div>

