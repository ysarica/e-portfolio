
@{
    ViewBag.Title = "SurecListe";
    Layout = "~/Views/Shared/_AdminMaster.cshtml";
}
@section Baslik{ SUREC LİSTE }
@section sitemap{SUREC LİSTE }
@section title{SUREC LİSTE}
@model IEnumerable<ECV.Models.Surec>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">SÜREÇ Listeleniyor</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Baslik</th>
                        <th>Aciklama</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>@item.SID</td>
                            <td>@item.baslik</td>
                            <td>@item.aciklama</td>
                            <td>
                                <div class="btn-group">
                                    <a href="/Diger/SurecDuzenle?SID=@item.SID" class="btn btn-warning">Düzenle</a>
                                </div>
                            </td>



                        </tr>

                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Baslik</th>
                        <th>Aciklama</th>
                        <th>İşlem</th>
                    </tr>
                </tfoot>
            </table>
        </div>
        <!-- /.card-body -->
    </div>


</div>