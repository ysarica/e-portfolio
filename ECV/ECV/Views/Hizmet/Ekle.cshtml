
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_AdminMaster.cshtml";
}

@section Baslik{ HİZMET EKLE }
@section sitemap{HİZMET EKLE }
@section title{HİZMET EKLE}
@model ECV.Models.Hizmetler

@Html.Action("_Liste","Hizmet")


<div class="col-md-12">
    <div class="card card-success">
        <div class="card-header">
            <h3 class="card-title">HİZMET EKLE</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
            <!-- /.card-tools -->
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            @using (Html.BeginForm("Ekle", "Hizmet", FormMethod.Post, new { @class = "form-horizontal", @id = "form_sample_1", @enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="card-body">
                    <div class="form-group">
                        <a href="https://ionicons.com/v2/cheatsheet.html" target="_blank" class="btn btn-info">İcon Sekmesi</a>
<br />
                        <label for="exampleInputPassword1">İcon</label>
                        <input type="text" class="form-control" id="icon" name="icon" value="" placeholder="İcon">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Başlık</label>
                        <input type="text" class="form-control" id="baslik" name="baslik" value="" placeholder="Başlık">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Açıklama</label>
                        <input type="text" class="form-control" id="aciklama" name="aciklama" value="" placeholder="Açıklama">
                    </div> 
                    </div>
                <!-- /.card-body -->

                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Ekle</button>
                    </div>
            }
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>
